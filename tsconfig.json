{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "bin",
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "vitest/globals"
    ]
  }
}
